{
    "name": "Keeper Web App Development",
    "image": "permitio/opal-client:latest",
    "forwardPorts": [
        3000,
        3001,
        8083,
        7002,
        8181
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "javascript.validate.enable": true,
                "python.pythonPath": "/usr/local/bin/python",
                "python.linting.enabled": true,
                "python.linting.pylintEnabled": true,
                "python.formatting.provider": "black",
                "editor.formatOnSave": true
            },
            "extensions": [
                "ms-python.python",
                "ms-vscode.vscode-typescript-tslint",
                "esbenp.prettier-vscode"
            ]
        }
    },
    "postCreateCommand": "if [ -d \"client\" ]; then npm install --prefix client; fi && if [ -d \"server\" ]; then npm install --prefix server; fi && if [ -f \"setup.py\" ]; then python setup.py install; fi"
}